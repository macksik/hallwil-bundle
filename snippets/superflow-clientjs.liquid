<script>
    window._sfProperties = {
          country: '{{ localization.country }}',
          theme: '{{ theme.name }}',
          pagetype: '{{ request.page_type }}',
          {% if customer.email %}
          loggedIn: true,
          userid: '{{ customer.id }}',
          firstname: '{{ customer.first_name }}',
          lastname: '{{ customer.last_name }}',
          email: '{{ customer.email }}',
          {% else %}
          loggedIn: false,
          userid: null,
          firstname: null,
          lastname: null,
          email: null,
          {% endif %}
      }
    </script>
    